package Libary;

import java.util.concurrent.atomic.AtomicInteger;


public class Books {
	private String title;
	private String author;
	private String genre;
	private String publisher;
	private char shelf;
	private int bookId;
	private int counter;
	public static AtomicInteger count = new AtomicInteger(0);

	
	
	Books(String title, String author, String genre, String publisher, char shelf) {
		this.title = title;
		this.author = author;
		this.genre = genre;
		this.publisher = publisher;
		this.shelf = shelf;
		this.bookId = count.incrementAndGet();
		this.counter = 0;
	}
	
	public int getBookId() {
		return bookId;
	}

	public void setBookId(int bookId) {
		this.bookId = bookId;
	}

	public int getCounter() {
		return counter;
	}

	public void addCounter() {
		this.counter = counter + 1;
	}

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public String getAuthor() {
		return author;
	}

	public void setAuthor(String author) {
		this.author = author;
	}

	public String getGenre() {
		return genre;
	}

	public void setGenre(String genre) {
		this.genre = genre;
	}

	public String getPublisher() {
		return publisher;
	}

	public void setPublisher(String publisher) {
		this.publisher = publisher;
	}

	public char getShelf() {
		return shelf;
	}

	public void setShelf(char shelf) {
		this.shelf = shelf;
	}

	public static AtomicInteger getCount() {
		return count;
	}

	public static void setCount(AtomicInteger count) {
		Books.count = count;
	}

	public int getId() {
		return bookId;
	}

	@Override
	public String toString() {
		return "Books [title=" + title + ", author=" + author + ", genre=" + genre + ", publisher=" + publisher
				+ ", shelf=" + shelf + ", bookId=" + bookId + "]";
	}

	public void setId(int id) {
		this.bookId = id;
	}


}
